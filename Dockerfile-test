FROM python:3.6-alpine

ENV MONGO $MONGOADDRESS
ENV MONGO_PORT $MONGOPORT
ENV RMQ_HOST $RABBITHOST
ENV RMQ_QUEUE $RABBITQUEUE
ENV RMQ_USERNAME $RABBITUSERNAME
ENV RMQ_PASSWORD $RABBITPASSWORD
ENV CHECK_INTERVAL $CHECKINTERVAL
ENV EXCLUDE_URLS $EXCLUDEURLS
ENV URL $URL

COPY . /app
WORKDIR /app

RUN pip install -r requirements.txt -r requirements-test.txt

ENTRYPOINT [ "/bin/sh", "test.sh" ]
